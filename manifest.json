{
  "manifest_version": 3,
  "name": "CodeGrab Pro",
  "version": "2.0.0",
  "description": "Detect, preview, and export code blocks from any webpage with advanced features.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "notifications",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "CodeGrab Pro",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*", "scripts/worker.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options/settings.html",
  "commands": {
    "scan-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Scan current page for code blocks"
    }
  }
}